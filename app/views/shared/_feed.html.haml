=provide(:heading, heading)
=provide(:date, date)
%ul.featured-feed
  .day
    %h4.title.v-big 
      %span=yield(:heading) 
      %span.title--subtext
        =yield(:date) unless date==nil
  .posts--group--header
  .container
    %ul.posts--group
      = render @lists

