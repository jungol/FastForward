:javascript
  $('.collection').click( function() {
    $text =($(this).text());
    mixpanel.track("Visited collection", {
      "Collection": $text,
      "Relation": "Root"
    });
  });
  $('.child').click( function() {
    $text = ($(this).text());
    mixpanel.track("Visited collection", {
      "Collection": $text,
      "Relation": "Child"
    })
  })
  $('.dropdown-menu li').click( function() {
    $text = $(this).text();
    $('#filter-display-name').text($text);
  })






